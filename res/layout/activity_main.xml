<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/RelativeLayout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header" >

        <ImageButton
            android:id="@+id/Button_showType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_button"
            android:src="@drawable/icon_list" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/main_user_experience"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/Button_showFunction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_button"
            android:src="@drawable/icon_function" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/RelativeLayout_header"
        android:background="@drawable/bg_main" >

        <com.yeegol.DIYWear.clz.MySurfaceView
            android:id="@+id/surface_main"
            android:layout_width="400dip"
            android:layout_height="600dip"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:id="@+id/LinearLayout_goodsType"
            android:layout_width="100dip"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_goods_type_scale"
            android:orientation="vertical"
            android:visibility="gone" >
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/LinearLayout_functionArea"
            android:background="@null" >

            <!-- http://stackoverflow.com/questions/6668269/android-resizing-problem-with-linearlayout-and-tiled-background -->

            <LinearLayout
                android:id="@+id/LinearLayout_goodsList"
                android:layout_width="100dip"
                android:layout_height="match_parent"
                android:background="@drawable/bg_goods_list_scale"
                android:divider="@drawable/line"
                android:orientation="vertical"
                android:showDividers="middle"
                android:visibility="gone" >
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/LinearLayout_functionArea"
            android:layout_width="100dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_function_scale"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/point" />

                <Button
                    android:id="@+id/Button_switchToMan"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:background="@null"
                    android:text="@string/main_male"
                    android:textSize="20sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/point" />

                <Button
                    android:id="@+id/Button_switchToWoman"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:background="@null"
                    android:text="@string/main_female"
                    android:textSize="20sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/point" />

                <Button
                    android:id="@+id/Button_turnBack"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:background="@null"
                    android:text="@string/main_turn"
                    android:textSize="20sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/point" />

                <Button
                    android:id="@+id/Button_undo"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:background="@null"
                    android:text="@string/main_undo"
                    android:textSize="20sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/point" />

                <Button
                    android:id="@+id/Button_save"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:background="@null"
                    android:text="@string/main_save"
                    android:textSize="20sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/point" />

                <Button
                    android:id="@+id/Button_share"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:background="@null"
                    android:text="@string/main_share"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/Button_cart"
        android:layout_width="100dip"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/popup_goods_list"
        android:visibility="gone" />

</RelativeLayout>